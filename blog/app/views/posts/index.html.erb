<% @posts.each do |post| %>

<div class="card md-4">
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <p class="card-text"><%= post.updated_at %></p>
    <a href="<%= edit_post_path(post.id) %>" class="btn btn-primary">Update</a>
    <%= link_to 'Delete', post, method: :delete, class: "btn btn-danger " %>
     <%= link_to 'Show', show_post_path(post.id),method: :get,class:  "btn btn-success " %>
  </div>
</div>

<% end %>